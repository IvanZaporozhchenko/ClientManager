@model IQueryable<BinaryStudio.ClientManager.DomainModel.Entities.Person>

@{
    Layout = "";
}


<div class="container">           
    <ul class ="clients">
        @foreach(var client in Model)
        {
            <li class="well span8">
                <div class="form-horizontal" >
                    <div class="span2">
                        <img src="@Url.Content(client.PhotoUri.Or(Url.DefaultPhoto()))" alt="Photo" height="100px" width="100px"/>
                    </div>
                    <div class="span3">
                        <p>
                            Full Name: @client.FullName 
                        </p>
                        <p>
                            Country: @client.Country
                        </p>
                    </div>
                    <div class="span3">
                        <p>
                            Email: @client.Email
                        </p>  
                        <p>
                            Phone: @client.Phone
                        </p> 
                        <div class="btn-group">
                            <a class = "btn btn-inverse" href="@Url.Action("Edit", "Clients", new { id = client.Id })">Edit</a>
                            <a class="btn" href="@Url.Action("Details", "Clients", new { id = client.Id })">Details</a>                            
                        </div>
                                               
                    </div>  
                </div>
            </li>
        }
    </ul>
</div>