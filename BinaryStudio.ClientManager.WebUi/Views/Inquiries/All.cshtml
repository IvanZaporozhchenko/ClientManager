@using BinaryStudio.ClientManager.DomainModel.Infrastructure
@model BinaryStudio.ClientManager.WebUi.Models.AllInquiriesViewModel

@{
    ViewBag.Title = "All";
}

<div id="all" class="container">
@foreach (var category in Model.Categories)
{   
    <div class="row-fluid">
        <ul class="category @category.Tag.CssClass">
            @foreach (var inquiry in category.Inquiries)
            {                                
                <li class="inquiry">
                    <a href="@Url.Action("Details", new { id = inquiry.Id })">
                        @inquiry.FullName <br/>
                        @inquiry.Subject 
                    </a>
                    <div>
                        @category.Tag.Name.Or("No tags")
                    </div>
                </li>
            }
        </ul>
    </div>    
}
</div>