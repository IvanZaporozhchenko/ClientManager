@model BinaryStudio.ClientManager.DomainModel.Entities.Inquiry

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>Details</h2>
    <fieldset>
        <legend>Inquiry</legend>
        <ul>
            <li>@Model.Source.Sender.FullName</li>
            <li>@Model.Source.Sender.Email</li>
            <li>@Model.Source.Date</li>
            <li>@Model.Source.Body</li>
        </ul>
    </fieldset>
    <div class="btn-group">
        <a class = "btn btn-inverse" href="@Url.Action("Edit", "Inquiries", new { id = Model.Id })">Edit</a>
        <a class = "btn" href="@Url.Action("Index", "Dashboard")">Back to Dashboard</a>
    </div>
</div>